{
  "name": "mister-funda-eleventy",
  "version": "1.0.0",
  "scripts": {
    "watch:css": "tailwindcss -i ./src/css/style.css -o ./src/css/main.css --watch",
    "watch:eleventy": "eleventy --serve",
    "build:css": "tailwindcss -i ./src/css/style.css -o ./src/css/main.css --minify",
    "build:eleventy": "eleventy",
    "start": "npm-run-all --parallel watch:*",
    "build": "npm-run-all build:*"
  },
  "dependencies": {
    "@11ty/eleventy": "^2.0.1",
    "npm-run-all": "^4.1.5",
    "tailwindcss": "^3.3.3",
    "postcss": "^8.4.29",
    "autoprefixer": "^10.4.15"
  }
}
